<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestion_noticias.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Inicio de sesión" />
            <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="366.0" promptText="Usuario" />
            <PasswordField fx:id="passwordField" promptText="Contraseña" />
            <Button onAction="#loginButtonAction" text="Iniciar Sesión" />
            <Hyperlink onAction="#registerLinkAction" text="¿No tienes una cuenta? Regístrate aquí." />
        </VBox>
    </center>
</BorderPane>
